# Testnet Environment Variables
# Copy this file to .env.local for development

# Blockchain Network Configuration
VITE_CHAIN_ID=1337
VITE_NETWORK_NAME=local

# RPC URLs (replace with your own API keys for better reliability)
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY
GOERLI_RPC_URL=https://eth-goerli.g.alchemy.com/v2/YOUR_API_KEY
MUMBAI_RPC_URL=https://polygon-mumbai.g.alchemy.com/v2/YOUR_API_KEY

# Private Keys (NEVER use these in production!)
# Generate new private keys for testnet deployment
PRIVATE_KEY=your_testnet_private_key_here

# Contract Addresses (will be populated after deployment)
VITE_DRIGHT_NFT_ADDRESS=
VITE_DRIGHT_RIGHTS_NFT_ADDRESS=

# IPFS Configuration
VITE_IPFS_GATEWAY=https://ipfs.io/ipfs/
VITE_IPFS_API_URL=https://ipfs.infura.io:5001/api/v0
VITE_IPFS_AUTH=your_ipfs_auth_token

# Platform Configuration
VITE_PLATFORM_FEE_PERCENTAGE=250
VITE_MINIMUM_LISTING_PRICE=0.001

# Development Flags
VITE_ENABLE_TESTNET_FEATURES=true
VITE_ENABLE_CONTRACT_DEBUGGING=true
VITE_SHOW_TRANSACTION_DETAILS=true